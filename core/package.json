{
  "name": "@bigbyte/core",
  "version": "0.8.0",
  "author": "Jose Eduardo Soria Garcia <alarifeproyect@gmail.com>",
  "license": "Apache-2.0",
  "private": false,
  "type": "commonjs",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ]
    }
  },
    "repository": {
    "type": "git",
    "url": "git+https://github.com/ALARIFE-PROYECT/bigbyte.git"
  },
  "homepage": "https://github.com/ALARIFE-PROYECT/bigbyte#readme",
  "bugs": {
    "url": "https://github.com/ALARIFE-PROYECT/bigbyte/issues"
  },
  "scripts": {
    "build": "npx tsc && common add-license --path=./lib --ext=.js,.ts --project-name=@bigbyte/core --project-author=Jose_Eduardo_Soria --project-license=Apache-2.0",
    "yalc:install": "npx yalc add @bigbyte/utils && npx yalc add @bigbyte/ioc && npx yalc add @bigbyte/ctx && npx yalc add @bigbyte/events && npx yalc add @bigbyte/classpath",
    "yalc:publish": "npm run build && npx yalc publish --push",
    "test": "npx tsc --project tsconfig.test.json && node --test dist/test"
  },
  "dependencies": {
    "@bigbyte/utils": "0.8.0",
    "@bigbyte/ioc": "0.8.0",
    "@bigbyte/ctx": "0.8.0",
    "@bigbyte/classpath": "0.8.0",
    "@bigbyte/events": "0.8.0",
    "chokidar": "~4.0.3",
    "reflect-metadata": "~0.2.2",
    "tslib": "~2.3",
    "uuid": "~11.1",
    "zone.js": "~0.14"
  },
  "devDependencies": {
    "@alarife/common": "~0.7.0",
    "@types/node": "~22",
    "typescript": "~5.9"
  }
}
