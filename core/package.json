{
  "name": "@bigbyte/core",
  "version": "0.1.0",
  "author": "Jose Eduardo Soria Garcia",
  "license": "Apache 2.0",
  "private": false,
  "type": "commonjs",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "npx tsc",
    "yalc:install": "npx yalc add @bigbyte/utils && npx yalc add @bigbyte/ioc && npx yalc add @bigbyte/ctx && npx yalc add @bigbyte/events && npx yalc add @bigbyte/classpath",
    "yalc:publish": "npm run build && npx yalc publish --push",
    "test": "npx tsc --project tsconfig.test.json && node --test dist/test"
  },
  "dependencies": {
    "@bigbyte/utils": "file:.yalc/@bigbyte/utils",
    "@bigbyte/ioc": "file:.yalc/@bigbyte/ioc",
    "@bigbyte/ctx": "file:.yalc/@bigbyte/ctx",
    "@bigbyte/classpath": "file:.yalc/@bigbyte/classpath",
    "@bigbyte/events": "file:.yalc/@bigbyte/events",
    "chokidar": "~4.0.3",
    "reflect-metadata": "~0.2.2",
    "tslib": "~2.3",
    "uuid": "~11.1",
    "zone.js": "~0.14"
  },
  "devDependencies": {
    "@types/node": "~22",
    "typescript": "~5.9"
  }
}
