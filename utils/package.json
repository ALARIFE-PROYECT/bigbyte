{
  "name": "@bigbyte/utils",
  "version": "0.1.0",
  "author": "Jose Eduardo Soria Garcia <pepesoriagarcia99@gmail.com>",
  "license": "ISC",
  "private": false,
  "type": "commonjs",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./decorator": {
      "import": "./lib/decorator.js",
      "require": "./lib/decorator.js",
      "types": "./lib/decorator.d.js"
    },
    "./constant": {
      "import": "./lib/constant/index.js",
      "require": "./lib/constant/index.js",
      "types": "./lib/constant/index.d.ts"
    },
    "./logger": {
      "import": "./lib/service/Logger.js",
      "require": "./lib/service/Logger.js",
      "types": "./lib/service/Logger.d.ts"
    },
    "./integration": {
      "import": "./lib/integration.js",
      "require": "./lib/integration.js",
      "types": "./lib/integration.d.js"
    },
    "./classpath": {
      "import": "./lib/classpath.js",
      "require": "./lib/classpath.js",
      "types": "./lib/classpath.d.js"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ],
      "decorator": [
        "./lib/decorator.d.ts"
      ],
      "constant": [
        "./lib/constant/index.d.ts"
      ],
      "logger": [
        "./lib/service/Logger.d.ts"
      ],
      "integration": [
        "./lib/integration.d.js"
      ],
      "classpath": [
        "./lib/classpath.d.js"
      ]
    }
  },
  "scripts": {
    "build": "npx tsc",
    "yalc:publish": "npm run build && npx yalc publish --push",
    "test": "npx tsc --project tsconfig.test.json && node --test dist/test"
  },
  "dependencies": {
    "chalk": "~5.4.1",
    "moment": "~2.30",
    "tslib": "~2.3",
    "zone.js": "~0.14"
  },
  "devDependencies": {
    "@types/node": "~22",
    "@types/uuid": "~10",
    "typescript": "~5.9"
  }
}
