{
  "name": "@bigbyte/utils",
  "version": "0.1.0",
  "author": "Jose Eduardo Soria Garcia",
  "license": "Apache 2.0",
  "private": false,
  "type": "commonjs",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    "./constant": {
      "import": "./lib/constant/index.js",
      "require": "./lib/constant/index.js",
      "types": "./lib/constant/index.d.ts"
    },
    "./logger": {
      "import": "./lib/service/Logger.js",
      "require": "./lib/service/Logger.js",
      "types": "./lib/service/Logger.d.ts"
    },
    "./argument": {
      "import": "./lib/service/ArgumentService.js",
      "require": "./lib/service/ArgumentService.js",
      "types": "./lib/service/ArgumentService.d.ts"
    },
    "./environment": {
      "import": "./lib/service/EnvironmentService.js",
      "require": "./lib/service/EnvironmentService.js",
      "types": "./lib/service/EnvironmentService.d.ts"
    },
    "./exception": {
      "import": "./lib/exception/index.js",
      "require": "./lib/exception/index.js",
      "types": "./lib/exception/index.d.js"
    },
    "./utilities": {
      "import": "./lib/util/index.js",
      "require": "./lib/util/index.js",
      "types": "./lib/util/index.d.js"
    }
  },
  "typesVersions": {
    "*": {
      "constant": [
        "./lib/constant/index.d.ts"
      ],
      "logger": [
        "./lib/service/Logger.d.ts"
      ],
      "argument": [
        "./lib/service/ArgumentService.d.ts"
      ],
      "environment": [
        "./lib/service/EnvironmentService.d.ts"
      ],
      "exception": [
        "./lib/exception/index.d.js"
      ],
      "utilities": [
        "./lib/util/index.d.js"
      ]
    }
  },
  "scripts": {
    "build": "npx tsc",
    "yalc:publish": "npm run build && npx yalc publish --push",
    "test": "npx tsc --project tsconfig.test.json && node --test dist/test"
  },
  "dependencies": {
    "reflect-metadata": "~0.2.2",
    "chalk": "~5.4.1",
    "moment": "~2.30",
    "tslib": "~2.3",
    "zone.js": "~0.14"
  },
  "devDependencies": {
    "@types/node": "~22",
    "typescript": "~5.9"
  }
}
