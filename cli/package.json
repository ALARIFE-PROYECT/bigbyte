{
  "name": "@bigbyte/cli",
  "version": "0.1.0",
  "author": "Jose Eduardo Soria Garcia <alarifeproyect@gmail.com>",
  "license": "Apache 2.0",
  "private": false,
  "bin": {
    "bbyte": "./lib/index.js"
  },
  "type": "commonjs",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ]
    }
  },
  "scripts": {
    "copy-banner": "node copy.js ./src/constant/banner.txt ./lib/constant/banner.txt",
    "build": "npx tsc && npm run copy-banner",
    "yalc:install": "npx yalc add @bigbyte/utils && npx yalc add @bigbyte/classpath && npx yalc add @bigbyte/integration",
    "yalc:publish": "npm run build && npx yalc publish --push",
    "test": "npx tsc --project tsconfig.test.json && node --test dist/test",
    "test:one": "npx tsc --project tsconfig.test.json && node --test"
  },
  "dependencies": {
    "@bigbyte/utils": "file:.yalc/@bigbyte/utils",
    "@bigbyte/classpath": "file:.yalc/@bigbyte/classpath",
    "@bigbyte/integration": "file:.yalc/@bigbyte/integration",
    "chokidar": "~4",
    "ts-morph": "~26.0",
    "log-update": "~4",
    "tslib": "~2",
    "uuid": "~11.1"
  },
  "devDependencies": {
    "@types/node": "~22",
    "typescript": "~5.9"
  }
}
