{
  "name": "@bigbyte/cli",
  "version": "0.7.0",
  "author": "Jose Eduardo Soria Garcia <alarifeproyect@gmail.com>",
  "license": "Apache-2.0",
  "private": false,
  "bin": {
    "bbyte": "./lib/index.js"
  },
  "type": "commonjs",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ALARIFE-PROYECT/bigbyte.git"
  },
  "homepage": "https://github.com/ALARIFE-PROYECT/bigbyte#readme",
  "bugs": {
    "url": "https://github.com/ALARIFE-PROYECT/bigbyte/issues"
  },
  "scripts": {
    "copy-banner": "common copy ./src/constant/banner.txt ./lib/constant/banner.txt",
    "build": "npx tsc && npm run copy-banner && common add-license --path=./lib --ext=.js,.ts --project-name=@bigbyte/cli --project-author=Jose_Eduardo_Soria --project-license=Apache-2.0",
    "yalc:install": "npx yalc add @bigbyte/utils && npx yalc add @bigbyte/classpath && npx yalc add @bigbyte/integration",
    "yalc:publish": "npm run build && npx yalc publish --push",
    "test": "npx tsc --project tsconfig.test.json && node --test dist/test",
    "test:one": "npx tsc --project tsconfig.test.json && node --test"
  },
  "dependencies": {
    "@bigbyte/classpath": "0.7.0",
    "@bigbyte/integration": "0.7.0",
    "@bigbyte/utils": "0.7.0",
    "chokidar": "~4",
    "log-update": "~4",
    "ts-morph": "~26.0",
    "tslib": "~2",
    "uuid": "~11.1"
  },
  "devDependencies": {
    "@alarife/common": "~0.7.0",
    "@types/node": "~22",
    "typescript": "~5.9"
  }
}
